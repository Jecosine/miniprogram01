/* pages/main/main.wxss */
@import "../css/stylesheet.wxss";

.container {
  position: absolute;
  width: 100%;
  padding: 0;
}
.search-bar {
  display: block;
  position: relative;
  top: 10px;
  height: 25px;
  width: 95%;
  border-radius: 12px;
  background-color: #fff;
  border: solid #dadada 1px;
}
.search-bar > view {
  display: inline;
  position: relative;
  vertical-align: middle;
  text-align: center;
  margin-left: 15px;
  color: #aaa;
}
.search-bar > input{
  display: inline-block;
  position: relative;
  height: 25px;
  width: calc( 100% - 50px);
  vertical-align: middle;
  line-height: 20px;
  font-size: 12px;
  color: #aaa;
  margin-left: 10px;
}
.activity-bar{
  position: relative;
  margin-top: -90px;  
  width: 95%;
  height: 80px;
  background-color: #d3d3d3;
}
.activity-ovals{
  position: relative;
  width: 100%;
  margin-top: 90px;
  height:10px;
  text-align: center;
}
.oval {
  position: relative;
  display: inline-block;
  width: 10px;
  height: 10px;
  margin-left: 5px;
  background: url(data:image/png;base64,) no-repeat;
  background-size: contain;
}
.recom-container {
  padding-top: 10px;
  width: 95%;
  margin-top: -70px;

}
.title-box {
  position: relative;
  width: 100%;
  margin-left: 0;
  border-bottom: solid #aaa 2px;
  height: 30px;
  text-align: left;
}
.recom-title {
  text-align: left;
  color: #aaa;
  font-size: 15px;

}
.passage-abstract {
  margin: 5px;
  margin-top: 10px;
  padding-bottom: 10px;
  border-bottom: solid #aaa 0.5px;
}
.passage-abstract > image{
  width: 70px;
  height: 70px;
  background-size: cover;
}
.abstract-title {
  position: relative;
  top: -50px;
  color: #5a5a5a;
  margin-left: 10px;
  font-weight: 800;

}
.abstract-time {
  position: relative;
  text-align: right;
  right: -40px;
  color: #aaa;
  font-weight: 200;
  font-size: 10px;
}